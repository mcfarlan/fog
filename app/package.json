{
  "name": "fog",
  "version": "1.4.4",
  "description": "Unofficial overcast.fm podcast app",
  "build": {
    "appId": "com.vitorgalvao.fog",
    "productName": "Fog",
    "mac": {
      "target": "zip",
      "icon": "../icon/icon.icns"
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "build": "npm run build-macos",
