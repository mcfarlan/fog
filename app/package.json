  "bugs": {
    "url": "https://github.com/vitorgalvao/fog/issues"
  },
  "homepage": "https://github.com/vitorgalvao/fog",
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^20.2.0"
  },
  "dependencies": {
    "electron-window-state": "^4.1.1",
    "mousetrap": "^1.6.1",
    "sweetalert": "^1.1.3"
  }
